<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ozstrategy.dao.project.ProjectDao">
    <!--<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>-->
    <resultMap id="ProjectResult" type="com.ozstrategy.model.project.Project" autoMapping="true">
        <id column="id" property="id" javaType="long"/>
        <collection property="users" column="id" select="com.ozstrategy.dao.project.ProjectUserDao.listProjectUserByProjectId" fetchType="lazy"/>
    </resultMap>
    
    <select id="listProjects" resultMap="ProjectResult" parameterType="Map">
        select f.* from ext_project f where 1=1 
        <if test="name!=null and name!=''">and f.name like CONCAT(CONCAT('%', #{keyword}), '%')</if>
        <if test="serialNumber!=null and serialNumber!=''">and f.serialNumber =#{serialNumber}</if>
        order by f.createDate desc
    </select>
    <select id="listProjectsCount" resultType="java.lang.Integer" parameterType="Map">
        select count(id) from ext_project f where 1=1
        <if test="name!=null and name!=''">and f.name like CONCAT(CONCAT('%', #{keyword}), '%')</if>
        <if test="serialNumber!=null and serialNumber!=''">and f.serialNumber =#{serialNumber}</if>
    </select>
    <select id="getProjectById" resultMap="ProjectResult" parameterType="long">
        SELECT * from ext_project where id=#{id}
    </select>
    <select id="getProjectByName" resultMap="ProjectResult" parameterType="string">
        SELECT * from ext_project u where u.name=#{name}
    </select>
    <select id="getProjectBySno" resultMap="ProjectResult" parameterType="string">
        SELECT * from ext_project u where u.serialNumber=#{serialNumber}
    </select>
    
    
    <select id="getNoCascadeProjectById" resultType="com.ozstrategy.model.project.Project" parameterType="long">
        SELECT * from ext_project where id=#{id}
    </select>
    <insert id="save" parameterType="com.ozstrategy.model.project.Project" flushCache="true">
        <selectKey keyColumn="id" keyProperty="id" resultType="java.lang.Long">
            select LAST_INSERT_ID()
        </selectKey>
        insert into ext_project(id,name,serialNumber,description,activationCode,createDate,lastUpdateDate) values(
        #{id},
        #{name},
        #{serialNumber},
        #{description},
        #{activationCode},
        #{createDate},
        #{lastUpdateDate}
        )
    </insert>
    <update id="update" parameterType="com.ozstrategy.model.project.Project" flushCache="true">
        UPDATE ext_project u set 
        u.name=#{name},
        u.serialNumber=#{serialNumber},
        u.description=#{description},
        u.activationCode=#{activationCode},
        u.lastUpdateDate=#{lastUpdateDate} WHERE u.id=#{id}
    </update>
    <delete id="delete" flushCache="true" parameterType="long">
        DELETE from ext_project where id=#{id}
    </delete>
    
    
    
</mapper>